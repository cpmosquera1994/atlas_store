<div id="<% dom_id(product)%>">
  <p>
    <b>Name:</b>
    <%= product.name %>
  </p>
  <p>
    <b>Logo:</b>
    <%= link_to image_tag(product.image_as_thumbnail), product.image if product.image.attached? %>
  </p>
  <p>
    <b>Price:</b>
    <%= number_to_currency(product.price.to_f, delimiter: '', unit: '$') %>
  </p>
  <p>
    <b>Stock:</b>
    <%= product.stock %>
  </p>
  <p>
    <b>Description:</b>
    <%= product.description %>
  </p>
</div>
<% if @in_brand %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "Edit", edit_product_path(product) %>
    <%= button_to "Delete", product, method: :delete, class:"btn btn-sm btn-outline-secondary" %>
  <% end %>
  <%= link_to "Add to cart", add_to_cart_path( product_id: product.id,  quantity: 1)  %>
<% end %>
