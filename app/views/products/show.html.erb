<%= turbo_stream_from @product %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Products", products_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
  </ol>
</nav>
<%= render @product %>
<div class="d-flex justify-content-between align-items-center my-4">
  <div class="list-group list-group-horizontal">
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Edit", edit_product_path(@product), class: "list-group-item list-group-item-action list-group-item-secondary" %>
      <%= button_to "Delete", @product, method: :delete, class: "list-group-item list-group-item-action list-group-item-secondary" %>
    <% end %>
  </div>
</div>
