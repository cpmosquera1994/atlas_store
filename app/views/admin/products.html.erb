<h3>Administrator</h3>
<%= render 'admin/nav_links'%>
<div class="table-responsive">
<table class="table table-striped table-hover my-4">
  <thead>
    <tr>
      <th scope="col">Logo</th>
      <th scope="col">Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Stock</th>
      <th scope="col">Price</th>
      <th colspan=3  class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag(product.image_as_thumbnail 50), product.image if product.image.attached? %></td>
        <td><%= product.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.stock %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "Show", product, class: "btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %>
        </td>
        <td>
          <%= button_to "Delete", product, method: :delete, class: "btn btn-danger" %>
        </td>
    <% end %>
  </tbody>
</table>
</div>
