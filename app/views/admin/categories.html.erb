<h3>Administrator</h3>
<%= render 'admin/nav_links'%>

<div class="p-3">
<%= link_to "New category", new_category_path , class: "btn btn-primary"%>
</div>

<div class="table-responsive">
<table class="table table-striped table-hover my-4">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th colspan=1  class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-primary" %>
        </td>
        <td>
          <%= button_to "Delete", category, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
        </td>
    <% end %>
  </tbody>
</table>
</div>
