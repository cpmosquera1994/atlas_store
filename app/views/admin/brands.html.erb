<h3>Administrator</h3>
<%= render 'admin/nav_links'%>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Logo</th>
      <th>Name</th>
      <th>Owner</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <th><%= brand.id %></th>
        <td><%= link_to image_tag(brand.image_as_thumbnail), brand.image if brand.image.attached? %></td>
        <td><%= link_to brand.name.truncate(15), admin_brand_path(brand) %></td>
        <td><%= brand.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
