<h3>Administrator</h3>
<%= render 'admin/nav_links', page: "brand"%>
<div class="table-responsive">
<table class="table table-striped table-hover my-4">
  <thead>
    <tr>
      <th scope="col">Logo</th>
      <th scope="col">Name</th>
      <th scope="col">Owner</th>
      <th colspan=3  class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to image_tag(brand.image_as_thumbnail 50), brand.image if brand.image.attached? %></td>
        <td><%= brand.name %></td>
        <td><%= brand.user.email %></td>
        <td>
          <%= link_to "Show", brand, class: "btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_brand_path(brand), class: "btn btn-primary" %>
        </td>
        <td>
          <%= button_to "Delete", brand, method: :delete, class: "btn btn-danger" %>
        </td>
    <% end %>
  </tbody>
</table>
</div>
