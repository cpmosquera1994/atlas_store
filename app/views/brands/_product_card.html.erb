<div class="card shadow-sm h-100">
  <%= link_to image_tag(product.image, class:"bd-placeholder-img card-img-top", width:'100%', preserveAspectRatio: "xMidYMid slice"), product.image if product.image.attached?  %>
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"> <%= product.description.to_plain_text.truncate(85) %> </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= number_to_currency(product.price.to_f, delimiter: '', unit: '$') %></li>
    <li class="list-group-item"><small class="text-muted">In stock: <%= pluralize product.stock, "unit" %></small></li>
  </ul>
  <div class="card-body">
    <div class="btn-group">
      <%= link_to "View", product , class: "btn btn-sm btn-outline-secondary" %>
      <%= link_to "Add to cart", add_to_cart_path( product_id: product.id,  quantity: 1), class: "btn btn-sm btn-outline-secondary" %>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Edit", edit_product_path(product), class:"btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>
